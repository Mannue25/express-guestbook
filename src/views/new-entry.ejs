<%- include('partials/header') %>

<div class="col-md-4 offset-md-4">

    <h2 class="text-center">Write a New Entry</h2>
    <form method="POST" action="/new-entry">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Enter a new Title" required>
        </div>
        <div class="form-group">
            <label for="body">Entry Text</label>
            <textarea name="body" id="body" cols="3" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Entry" class="btn btn-dark">
        </div>
    </form>
</div>

<%- include('partials/footer') %>